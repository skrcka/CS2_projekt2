@using DenRozeWeb.Models;
@model UserModel;
@{
    ViewData["Title"] = "Login";
}
<div class="text-center">
    <h2>Login</h2>
    @using (Html.BeginForm())
    {
        <div class="form-group row">
            @Html.LabelFor(x => x.Login, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Login, new { @class = "form-control", @placeholder = "Enter username" })
            </div>
            @Html.ValidationMessageFor(x => x.Login)
        </div>
        <div class="form-group row">
            @Html.LabelFor(x => x.Password, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Password, new { @type = "password", @class = "form-control", @placeholder = "Enter password" })
            </div>
            @Html.ValidationMessageFor(x => x.Password)
        </div>

        <button class="btn btn-primary" type="submit">Login</button>
    }
</div>