@using DenRozeWeb.Models;
@model UserModel;
@{
    int index = 0;
    ViewData["Title"] = "User detail";
}
<div class="text-center">
    <h2>User Detail</h2>
</div>
<div class="text-right">
    <a href="@Url.Action("Logout", "Home")" class="btn btn-primary">Logout</a>
</div>
@using (Html.BeginForm())
{
    <div class="form-group row">
        @Html.HiddenFor(x => x.UID)
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Login, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Login, new { @class = "form-control-plaintext", @placeholder = "Login", @readonly = "true" })
        </div>
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Full_name, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Full_name, new { @class = "form-control", @placeholder = "Full name" })
        </div>
        @Html.ValidationMessageFor(x => x.Full_name)
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Email, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Email, new { @type = "email", @class = "form-control", @placeholder = "Email" })
        </div>
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Phone, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @placeholder = "Phone" })
        </div>
        @Html.ValidationMessageFor(x => x.Phone)
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Address, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Address, new { @class = "form-control", @placeholder = "Email" })
        </div>
        @Html.ValidationMessageFor(x => x.Address)
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Password, new { @class = "col-sm-2 col-form-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Password, new { @type = "password", @class = "form-control", @placeholder = "Enter password" })
        </div>
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <button class="btn btn-primary" type="submit">Save</button>
}
